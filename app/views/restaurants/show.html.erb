<p style="color: green"><%= notice %></p>

<%= render @restaurant %>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">
      <%= review.content %>
      <%= link_to "Delete",
        review_path(review),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
    </li>
  <% end %>
</ul>
<br>

<div>
  <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant) %> |
  <%= link_to "Back to restaurants", restaurants_path %> |
  <%= link_to "Check out the restaurant's chef", chef_restaurant_path(@restaurant)  %> |
  <%= link_to "Write a review for #{@restaurant.name}", new_restaurant_review_path(@restaurant) %>
  <%= button_to "Destroy this restaurant", @restaurant, method: :delete %>
</div>
